<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card text-center">
                <div class="card-header h5 text-white" style="background-color: #dc3545;">
                    Thay đổi mật khẩu
                </div>
                <div class="card-body px-5">
                    <p class="card-text py-2">Nhập email mà bạn dùng để đăng nhập.</p>
                    <form id="resetPasswordForm" action="/forgot-password" method="POST">
                        <div class="form-outline">
                            <input type="email" id="typeEmail" name="email" class="form-control my-3"
                                placeholder="Nhập email" required />
                        </div>
                        <button type="submit" id="resetPasswordBtn" class="btn btn-primary w-100"
                            style="background-color: #dc3545; border: none">
                            Đặt lại mật khẩu
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal Bootstrap -->
<div class="modal fade" id="successModal" tabindex="-1" role="dialog" aria-labelledby="successModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="successModalLabel">Thông báo</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Chúng tôi đã gửi mật khẩu mới tới email của bạn. Vui lòng đăng nhập lại vào hệ thống.
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal" id="closeModalBtn">
                    Đóng
                </button>
            </div>
        </div>
    </div>
</div>

<script>
    document.getElementById("resetPasswordForm").addEventListener("submit", function (event) {
        event.preventDefault(); // Ngừng hành động mặc định của form

        const email = document.getElementById("typeEmail").value;

        // Kiểm tra xem email có hợp lệ không
        if (!email) {
            alert("Vui lòng nhập email!");
            return;
        }

        fetch("/forgot-password", {
            method: "POST",
            headers: {
                "Content-Type": "application/json",
            },
            body: JSON.stringify({ email: email }),
        })
            .then(response => {
                // Kiểm tra mã phản hồi HTTP từ server (status code)
                if (!response.ok) {
                    throw new Error(`Server trả về lỗi: ${response.statusText}`);
                }
                return response.json();
            })

        $('#successModal').modal('show');
        $('#closeModalBtn').click(function () {
            window.location.href = '/login-register';
        });
    });
</script>