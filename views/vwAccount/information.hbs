{{#section 'js'}}
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdn.jsdelivr.net/npm/bcryptjs@2.4.3/dist/bcrypt.min.js"></script>
    <script>
        $('#updateName').on('submit', function (e) {
            e.preventDefault();
            const password = $('#password').val();
            const name = $('#name').val();
            if (password.length === 0) {
                Swal.fire({title: 'Error!', text: 'Password is required', icon: 'error',});
                return;
            }
            if (name.length === 0) {
                Swal.fire({title: 'Error!', text: 'Name is required', icon: 'error',});
                return;
            }
            $.ajax({
                method: 'POST', url: '/account/is-valid-password',
                data: {password: password},
                success: function (response) {
                    if (response === true) {
                        $('#updateName').off('submit').submit();
                    } else {
                        Swal.fire({title: 'Error!', text: 'Password is incorrect', icon: 'error',});
                    }
                }, error: function () {
                    Swal.fire({title: 'Error!', text: 'There was an error processing your request', icon: 'error',});
                }
            });
        });
    </script>
    <script>
        $('#updateEmail').on('submit', function (e) {
            e.preventDefault();
            const password = $('#emailPassword').val();
            const email = $('#email').val();
            $.getJSON(`/account/is-available-email?email=${email}`, function (data) {
                if (data === false) {
                    Swal.fire
                    ({
                        title: 'Error!',
                        text: 'Email already existed',
                        icon: 'error',
                    })
                    return;
                }
                if (password.length === 0) {
                    Swal.fire({title: 'Error!', text: 'Password is required', icon: 'error',});
                    return;
                }
                if (email.length === 0) {
                    Swal.fire({title: 'Error!', text: 'Email is required', icon: 'error',});
                    return;
                }
                $.ajax({
                    method: 'POST', url: '/account/is-valid-password',
                    data: {password: password},
                    success: function (response) {
                        if (response === true) {
                            $('#updateEmail').off('submit').submit();
                        } else {
                            Swal.fire({title: 'Error!', text: 'Password is incorrect', icon: 'error',});
                        }
                    }, error: function () {
                        Swal.fire({
                            title: 'Error!',
                            text: 'There was an error processing your request',
                            icon: 'error',
                        });
                    }
                });
            });


        });
    </script>
    <script>
        $('#updatePassword').on('submit', function (e) {
            e.preventDefault();
            const password = $('#oldPassword').val();
            const newPassword = $('#newPassword').val();
            if (password.length === 0) {
                Swal.fire({title: 'Error!', text: 'Password is required', icon: 'error',});
                return;
            }
            if (newPassword.length === 0) {
                Swal.fire({title: 'Error!', text: 'New password is required', icon: 'error',});
                return;
            }
            $.ajax({
                method: 'POST', url: '/account/is-valid-password',
                data: {password: password},
                success: function (response) {
                    if (response === true) {
                        $('#updatePassword').off('submit').submit();
                    } else {
                        Swal.fire({title: 'Error!', text: 'Password is incorrect', icon: 'error',});
                    }
                }, error: function () {
                    Swal.fire({title: 'Error!', text: 'There was an error processing your request', icon: 'error',});
                }
            });
        });
    </script>

