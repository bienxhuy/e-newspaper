{{#section 'css'}}<style nonce="{{nonce}}">
    .categories-container {
        border-radius: 10px;
        min-height: 797px;
        background-color: white;
        padding: 1rem 1.5rem;
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
    }

    .header-row {
        padding: 0.5rem;
        background-color: #EF314C;
        border-radius: 0.25rem;
    }

    .scrollable-content {
        max-height: 600px;
        overflow-y: auto;
    }

    .category-section {
        padding: 0.75rem 0;
        transition: background-color 0.2s ease;
    }

    .category-section:hover {
        background-color: #f8f9fa;
    }

    .category-section__category-name {
        font-weight: 500;
    }

    .category-section__child-category {
        white-space: nowrap;
        overflow-x: auto;
    }

    .category-section__child-category a {
        display: inline-block;
        padding: 0.25rem 0.5rem;
        background-color: #f8f9fa;
        border-radius: 0.25rem;
        color: #495057;
        text-decoration: none;
        margin-right: 0.5rem;
    }

    .category-section__child-category a:hover {
        background-color: #e9ecef;
    }

    .btn-rounded {
        border-radius: 10px;
    }

    .toast-container {
        position: absolute;
        z-index: 5;
        right: 0;
        bottom: 0;
        padding: 1rem;
    }

    .toast-custom {
        min-width: 300px;
    }

    .status-badge {
        padding: 0.25rem 0.75rem;
        border-radius: 10px;
        color: white;
    }

    .status-success {
        background-color: #1E8E23;
    }

    .status-error {
        background-color: #FC3850;
    }
</style>
<link rel="stylesheet" href="/static/css/admin/admin-categories.css">{{/section}}
{{#section 'js'}}
<script nonce="{{nonce}}">
    $(document).ready(function () {
        const deleted = $('#deleted').val().toString();
        if (deleted === 'true') {
            $('#liveToastTrue').toast('show');
        } else if (deleted === 'false') {
            $('#liveToastFalse').toast('show');
        }
    });
</script>

{{/section}}
<div class="categories-container position-relative">
    <div class="d-flex justify-content-between">
        <h3>Danh sách chuyên mục </h3> <a
            class="btn btn-outline-danger btn-rounded fw-bold d-flex align-items-center"
            href="/admin/categories/add"> <i class="bi bi-plus-square-fill me-1"></i> <span>Thêm chuyên mục</span> </a>
    </div>
    <div class="border-bottom mt-3">
        <div class="row text-white rounded d-flex py-2 align-items-center header-row">
            <h4 class="col-3 d-flex mb-0 justify-content-center"> <span>Tên chuyên mục</span> </h4>
            <h4 class="col-6 d-flex mb-0 justify-content-center"> <span class="ms-4">Chuyên mục con</span> </h4>
            <div class="col-3"> </div>
        </div>
    </div>
    <div class="scrollable-content"> {{#each this.categoryList}} <div class="row border category-section">
            <div class="col-3 category-section__category-name"> <span>{{name}}</span> </div>
            <div class="col-6 category-section__child-category"> {{#if this.childCats}} {{#each childCats}} <a
                    href="/admin/categories/edit?catId={{id}}" class="m-1">{{name}}</a> {{/each}} {{else}} Không có danh
                mục con {{/if}} </div>
            <div class="col-3 category-section__btn-edit d-flex justify-content-center"> <a
                    href="/admin/categories/edit?catId={{id}}" class="btn btn-outline-success btn-rounded me-3"> <i
                        class="bi bi-pencil-square me-1"></i>Sửa </a> <a href="/admin/categories/delete?catId={{id}}"
                    class="btn btn-outline-danger btn-rounded"> <i class="bi bi-trash me-1"></i>Xóa </a> </div>
        </div> {{/each}} </div>
    <input hidden="hidden" value="{{this.deleted}}" id="deleted">
    <div class="toast-container">
        <div id="liveToastFalse" class="toast hide toast-custom" role="alert" aria-live="assertive" aria-atomic="true"
            data-delay="4000">
            <div class="toast-header"> <img src="/static/images/others/unchecked.png" class="me-1" width="20px"
                    height="20px" /> <strong class="me-auto status-badge status-error">Xóa thất bại</strong> <small>mới
                    đây</small> <button type="button" class="ms-2 mb-1 btn-close" data-dismiss="toast" aria-label="Close">
                    <span aria-hidden="true">&times;</span> </button> </div>
            <div class="toast-body text-center"> Xin lỗi, chúng tôi gặp vấn đề khi xóa chuyên mục
                '{{this.categoryName}}' </div>
        </div>
        <div id="liveToastTrue" class="toast hide toast-custom" role="alert" aria-live="assertive" aria-atomic="true"
            data-delay="4000">
            <div class="toast-header"> <img src="/static/images/others/checked.png" class="me-1" width="20px"
                    height="20px" /> <strong class="me-auto status-badge status-success">Xóa thành công</strong>
                <small>mới đây</small> <button type="button" class="ms-2 mb-1 btn-close" data-dismiss="toast"
                    aria-label="Close"> <span aria-hidden="true">&times;</span> </button> </div>
            <div class="toast-body text-center"> Đã xóa chuyên mục '{{this.categoryName}}' </div>
        </div>
    </div>
</div>