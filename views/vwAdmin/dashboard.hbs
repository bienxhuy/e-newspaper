{{#section 'js'}}
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    const chLine = document.getElementById("chLine");

    if (chLine) {
        const ctx = chLine.getContext('2d');

        // Tạo gradient cho phần bên dưới line
        const gradientBelowLine = ctx.createLinearGradient(0, 0, 0, chLine.height);
        gradientBelowLine.addColorStop(1, 'rgba(242, 73, 115, 0.3)'); // Màu đậm ở phía trên

        const chartData = {
            labels: ["S", "M", "T", "W", "T", "F", "S", "X", "Y", "Z"],
            datasets: [{
                label: "Gradient Below Line",
                data: [50, 40, 300, 220, 500, 250, 400, 230, 500, 2000], // Dữ liệu của line
                borderColor: '#F24973', // Màu đường line
                borderWidth: 4, // Độ rộng của line
                pointBackgroundColor: '#F24973', // Màu các điểm
                tension: 0.4, // Độ cong của line
                backgroundColor: gradientBelowLine, // Gradient cho phần bên dưới
                fill: true // Bật chế độ tô màu bên dưới line
            }]
        };

        new Chart(ctx, {
            type: 'line',
            data: chartData,
            options: {
                scales: {
                    x: {
                        grid: { display: false }, // Loại bỏ grid dọc
                        beginAtZero: true // Bắt đầu từ 0 nếu cần
                    },
                    y: {
                        grid: {
                            drawBorder: false, // Loại bỏ kẻ dọc ở hai bên
                            borderDash: [5, 5] // Đường ngang đứt đoạn
                        },
                        ticks: {
                            beginAtZero: false
                        }
                    }
                },
                plugins: {
                    legend: {
                        display: false // Hiển thị legend
                    },
                },
                responsive: true // Biểu đồ tự điều chỉnh kích thước
            }
        });
    }
</script>


