{{#section 'css'}}
<style nonce="{{nonce}}">
    .register-container {
        background-color: #ffffff;
        border-radius: 10px;
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        padding: 1.5rem;
        margin-top: 1.5rem;
    }

    .table-custom {
        width: 100%;
        margin-bottom: 1rem;
    }

    .table-custom th {
        text-align: center;
        background-color: #f8f9fa;
        padding: 1rem;
        font-weight: 500;
    }

    .table-custom td {
        vertical-align: middle;
        text-align: center;
        padding: 0.75rem;
    }

    .table-hover tbody tr:hover {
        background-color: #f8f9fa;
        transition: background-color 0.2s ease;
    }

    .badge {
        padding: 0.5rem 0.75rem;
        border-radius: 10px;
        font-weight: 500;
    }

    .badge-pending {
        background-color: #ffc107;
        color: #ffffff;
    }

    .badge-approved {
        background-color: #28a745;
        color: #ffffff;
    }

    .badge-rejected {
        background-color: #dc3545;
        color: #ffffff;
    }

    .btn-rounded {
        border-radius: 10px;
        padding: 0.375rem 1rem;
    }

    .nav-pills .nav-link {
        border-radius: 10px;
        padding: 0.5rem 1rem;
        margin-right: 0.5rem;
        color: #6c757d;
        transition: all 0.2s ease;
    }

    .nav-pills .nav-link:hover {
        background-color: #f8f9fa;
    }

    .nav-pills .nav-link.active {
        background-color: #dc3545;
        color: #ffffff;
    }

    .truncate-text {
        max-width: 200px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .filter-select {
        width: 25%;
        border-radius: 10px;
        padding: 0.375rem 0.75rem;
        border: 1px solid #ced4da;
    }

    .pagination {
        display: flex;
        justify-content: center;
        margin-top: 1.5rem;
    }

    .pagination-link {
        background-color: #dc3545;
        color: #ffffff;
        border-color: #dc3545;
        border-radius: 10px;
        padding: 0.375rem 0.75rem;
        margin: 0 0.25rem;
        transition: all 0.2s ease;
    }

    .pagination-link:hover {
        background-color: #c82333;
        border-color: #bd2130;
        color: #ffffff;
    }

    .pagination-link.active {
        background-color: #ffffff;
        color: #dc3545;
        border-color: #dc3545;
    }

    .empty-message {
        text-align: center;
        color: #6c757d;
        padding: 2rem;
        font-style: italic;
    }
</style>
{{/section}}

<div class="register-container">
    <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="pills-reporter-tab" data-toggle="pill"
                data-target="#pills-reporter-tab-content" type="button" role="tab"
                aria-controls="pills-reporter-tab-content" aria-selected="true">
                <b>Ứng tuyển writer</b>
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="pills-editor-tab" data-toggle="pill" data-target="#pills-editor-tab-content"
                type="button" role="tab" aria-controls="pills-editor-tab-content" aria-selected="false">
                <b>Ứng tuyển editor</b>
            </button>
        </li>
    </ul>
    <div class="tab-content p-3" id="pills-tabContent">
        <!-- Tab ứng tuyển writer -->
        <div class="tab-pane fade show active" id="pills-reporter-tab-content" role="tabpanel"
            aria-labelledby="pills-reporter-tab">
            <div class="d-flex justify-content-end mb-3">
                <select id="writer-filter" class="filter-select">
                    <option value="">Tất cả trạng thái</option>
                    <option value="pending">Pending</option>
                    <option value="approved">Approved</option>
                    <option value="rejected">Rejected</option>
                </select>
            </div>
            {{#if writerApplications.length}}
            <table class="table table-custom table-hover table-bordered">
                <thead>
                    <tr>
                        <th>Tên</th>
                        <th>Lý do</th>
                        <th>Trạng thái</th>
                        <th>Hành động</th>
                    </tr>
                </thead>
                <tbody id="writer-table-body">
                    {{#each writerApplications}}
                    <tr data-status="{{this.status}}">
                        <td>{{this.user_name}}</td>
                        <td>
                            <span class="d-inline-block truncate-text" title="{{this.self_access}}">
                                {{this.self_access}}
                            </span>
                        </td>
                        <td><span class="badge badge-{{this.status}}">{{this.status}}</span></td>
                        <td>
                            {{#if (eq this.status 'pending')}}
                            <button class="btn btn-success btn-rounded btn-sm"
                                onclick="updateStatus('{{this.id}}', 'approved', '{{../writerRoleName}}')">
                                <b>Duyệt</b>
                            </button>
                            <button class="btn btn-danger btn-rounded btn-sm"
                                onclick="updateStatus('{{this.id}}', 'rejected')">
                                <b>Từ chối</b>
                            </button>
                            {{else}}
                            <span><b>Đã xử lý</b></span>
                            {{/if}}
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>

            <!-- Pagination for Writer -->
            <nav aria-label="Pagination" class="pagination">
                <ul class="pagination">
                    {{#if (greater currentPage 1)}}
                    <li class="page-item">
                        <a class="pagination-link" href="?page={{subtract currentPage 1}}"
                            aria-label="Previous">&laquo;</a>
                    </li>
                    {{/if}}
                    {{#each (range 1 totalPages)}}
                    <li class="page-item">
                        <a class="pagination-link {{#if (eq this ../currentPage)}}active{{/if}}"
                            href="?page={{this}}">{{this}}</a>
                    </li>
                    {{/each}}
                    {{#if (less currentPage totalPages)}}
                    <li class="page-item">
                        <a class="pagination-link" href="?page={{add currentPage 1}}" aria-label="Next">&raquo;</a>
                    </li>
                    {{/if}}
                </ul>
            </nav>
            {{else}}
            <p class="empty-message">Chưa có đơn đăng ký nào.</p>
            {{/if}}
        </div>

        <!-- Tab ứng tuyển editor -->
        <div class="tab-pane fade" id="pills-editor-tab-content" role="tabpanel" aria-labelledby="pills-editor-tab">
            <div class="d-flex justify-content-end mb-3">
                <select id="editor-filter" class="filter-select">
                    <option value="">Tất cả trạng thái</option>
                    <option value="pending">Pending</option>
                    <option value="approved">Approved</option>
                    <option value="rejected">Rejected</option>
                </select>
            </div>
            {{#if editorApplications.length}}
            <table class="table table-custom table-hover table-bordered">
                <thead>
                    <tr>
                        <th>Tên</th>
                        <th>Lý do</th>
                        <th>Trạng thái</th>
                        <th>Hành động</th>
                    </tr>
                </thead>
                <tbody id="editor-table-body">
                    {{#each editorApplications}}
                    <tr data-status="{{this.status}}">
                        <td>{{this.user_name}}</td>
                        <td>
                            <span class="d-inline-block truncate-text" title="{{this.self_access}}">
                                {{this.self_access}}
                            </span>
                        </td>
                        <td><span class="badge badge-{{this.status}}">{{this.status}}</span></td>
                        <td>
                            {{#if (eq this.status 'pending')}}
                            <button class="btn btn-success btn-rounded btn-sm"
                                onclick="updateStatus('{{this.id}}', 'approved', '{{../editorRoleName}}')">
                                <b>Duyệt</b>
                            </button>
                            <button class="btn btn-danger btn-rounded btn-sm"
                                onclick="updateStatus('{{this.id}}', 'rejected')">
                                <b>Từ chối</b>
                            </button>
                            {{else}}
                            <span><b>Đã xử lý</b></span>
                            {{/if}}
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>

            <!-- Pagination for Editor -->
            <nav aria-label="Pagination" class="pagination">
                <ul class="pagination">
                    {{#if (greater currentPage 1)}}
                    <li class="page-item">
                        <a class="pagination-link" href="?page={{subtract currentPage 1}}"
                            aria-label="Previous">&laquo;</a>
                    </li>
                    {{/if}}
                    {{#each (range 1 totalPages)}}
                    <li class="page-item">
                        <a class="pagination-link {{#if (eq this ../currentPage)}}active{{/if}}"
                            href="?page={{this}}">{{this}}</a>
                    </li>
                    {{/each}}
                    {{#if (less currentPage totalPages)}}
                    <li class="page-item">
                        <a class="pagination-link" href="?page={{add currentPage 1}}" aria-label="Next">&raquo;</a>
                    </li>
                    {{/if}}
                </ul>
            </nav>
            {{else}}
            <p class="empty-message">Chưa có đơn đăng ký nào.</p>
            {{/if}}
        </div>
    </div>
</div>

<script nonce="{{nonce}}">
    // Function to filter rows by status
    function filterTable(tableBodyId, filterValue) {
        const rows = document.querySelectorAll(`#${tableBodyId} tr`);
        rows.forEach(row => {
            const status = row.getAttribute('data-status');
            if (!filterValue || status === filterValue) {
                row.style.display = '';
            } else {
                row.style.display = 'none';
            }
        });
    }

    document.getElementById('writer-filter').addEventListener('change', function () {
        filterTable('writer-table-body', this.value);
    });

    document.getElementById('editor-filter').addEventListener('change', function () {
        filterTable('editor-table-body', this.value);
    });

    async function updateStatus(applicationId, newStatus, role = null) {
        try {
            const response = await fetch('/admin/role-registers', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                    id: applicationId,
                    status: newStatus,
                    role: role,
                }),
            });

            const result = await response.json();
            if (result.success) {
                location.reload(); // Reload lại trang để cập nhật bảng
            } else {
                alert('Cập nhật thất bại: ' + result.message);
            }
        } catch (error) {
            console.error('Error:', error);
            alert('Đã xảy ra lỗi, vui lòng thử lại.');
        }
    }
</script>