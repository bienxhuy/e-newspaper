<script>
    const users = [
        { id: 1, name: "Biện Xuân Huy", role: "Vua", vip: true },
        { id: 2, name: "Biện Xuy Huân", role: "Biên tập viên", vip: false },
        { id: 3, name: "Biện Huân Xuy", role: "Nhà báo", vip: true },
        { id: 4, name: "Biện Huy Xuân", role: "Khách", vip: false },
    ];

    const tableBody = document.querySelector("table tbody");

    // Hiển thị toàn bộ người dùng ban đầu
    renderTable(users);

    function renderTable(users) {
        tableBody.innerHTML = ""; // Xóa bảng hiện tại
        users.forEach(user => {
            const row = `<tr class="text-center">
                            <td>${user.id}</td>
                            <td>${user.name}</td>
                            <td>${user.role}</td>
                            <td>${user.vip ? "Có" : "Không"}</td>
                         </tr>`;
            tableBody.innerHTML += row;
        });
    }
</script>