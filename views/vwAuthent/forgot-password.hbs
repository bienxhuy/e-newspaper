{{#section 'css'}}
<style nonce="{{nonce}}">
    .container-nonce {
        height: 100vh
    }

    .auth-header {
        background-color: #dc3545;
        border-top-left-radius: .25rem;
        border-top-right-radius: .25rem;
    }

    .submit-button {
        background-color: #dc3545;
        border: none;
    }

    .login-link {
        color: #007BFF;
    }
</style>
{{/section}}

<div class="container">
    <div class="row justify-content-center align-items-center container-nonce">
        <div class="col-md-4">
            <div class="card">
                <div class="card-header h5 text-white auth-header">
                    Quên mật khẩu
                </div>
                <div class="card-body">
                    <form method="POST" action="/forgot-password">
                        <input type="hidden" name="_csrf" value="{{csrfToken}}">
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input type="email" class="form-control" id="email" name="email" required>
                            <small class="form-text text-muted">Nhập email đã đăng ký để lấy lại mật khẩu.</small>
                        </div>
                        <button type="submit" class="btn btn-primary btn-block submit-button">
                            Gửi mã xác nhận
                        </button>
                    </form>
                    <div class="mt-3 text-center">
                        <a href="/login-register" class="text-decoration-none login-link">
                            Quay lại đăng nhập
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script nonce="{{nonce}}">
    document.getElementById("resetPasswordForm").addEventListener("submit", async function (event) {
        event.preventDefault();

        function isValidEmail(email) {
            const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            return emailRegex.test(email);
        }

        const email = document.getElementById("typeEmail").value;

        if (!email) {
            Swal.fire({
                icon: "warning",
                title: "Vui lòng điền đầy đủ email.",
                confirmButtonColor: "#ffc107",
            });
            return;
        }

        if (!isValidEmail(email)) {
            Swal.fire({
                icon: "warning",
                title: "Email không hợp lệ.",
                confirmButtonColor: "#ffc107",
            });
            return;
        }

        try {
            const response = await fetch("/forgot-password", {
                method: "POST",
                headers: {
                    "Content-Type": "application/json",
                },
                body: JSON.stringify({ email: email }),
            });

            if (!response.ok) {
                throw new Error(`Server trả về lỗi: ${response.statusText}`);
            }

            await Swal.fire({
                icon: "success",
                title: "Chúng tôi đã gửi mã OTP tới email của bạn. Vui lòng xác thực để tiếp tục đặt lại mật khẩu.",
                confirmButtonText: "Đóng",
                confirmButtonColor: "#dc3545",
            });

            window.location.href = '/forgot-password/otp-verify';
        } catch (error) {
            Swal.fire({
                icon: "error",
                title: "Có lỗi xảy ra!",
                text: error.message,
                confirmButtonColor: "#dc3545",
            });
        }
    });
</script>