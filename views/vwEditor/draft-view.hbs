{{#section 'css'}}
<style nonce="{{nonce}}">
    .breadcrumb-divider::before {
        content: "|";
    }

    .sticky-control {
        position: sticky;
        top: 10px;
        align-self: flex-start;
    }

    .control-button {
        margin-bottom: 0.5rem;
    }

    .select-group-header {
        font-weight: 500;
        font-size: medium;
    }

    .select-option {
        margin-left: 15px;
    }

    .main-content {
        width: 730px;
    }

    .article-card {
        border: none;
    }

    .tag-list {
        list-style: none;
        display: flex;
        align-items: center;
        padding: 0;
        margin: 0;
    }

    .tag-icon {
        margin-right: 5px;
        margin-top: 5px;
    }

    .tag-badge {
        font-weight: 400;
    }

    .premium-badge {
        height: 20px;
    }

    .article-title {
        font-weight: bolder;
        margin: 0;
        margin-top: 15px;
    }

    .writer-info {
        margin: 0;
    }

    .no-border {
        border: none;
    }

    .modal-footer-custom {
        padding-bottom: 1rem;
        padding-top: 0;
    }

    .modal-button {
        margin: 0 auto;
    }
</style>
{{/section}}


{{#section 'js'}}
{{!-- Select multiplez --}}
<script nonce="{{nonce}}">
    new TomSelect('#selectCat', {
        plugins: ['remove_button'],
    });
    new TomSelect('#selectTag', {
        plugins: ['remove_button'],
    });
</script>
{{/section}}


<div class="container-fluid mt-3 py-4 d-flex main-content">
    <div class="sticky-control bg-light p-2 me-3 rounded">
        <a href="/editor" type="button" class="btn btn-secondary control-button">
            <i class="bi bi-reply"></i>
        </a> <br>
        <button type="button" class="btn btn-warning control-button" data-bs-toggle="modal" data-target="#rejectModal">
            <i class="bi bi-ban"></i>
        </button>
        <button type="button" class="btn btn-success control-button" data-bs-toggle="modal" data-target="#acceptModal">
            <i class="bi bi-send-check"></i>
        </button>
    </div>

    {{!-- Article --}}
    <div class="card article-card">
        <div class="card-body">
            <div class="list-group list-group-flush">
                <div class="list-group-item no-border">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            {{#each cData}}
                            {{#each children}}
                            {{#if selected}}
                            <li class="breadcrumb-item active breadcrumb-divider">
                                {{name}}
                            </li>
                            {{/if}}
                            {{/each}}
                            {{/each}}

                        </ol>
                    </nav>

                    <div class="d-flex">
                        <span>
                            <ul class="tag-list">
                                <i class="fas fa-tags fa-sm fa-fw tag-icon"></i>
                                {{#each this.tData}}
                                {{#if selected}}
                                <li>
                                    <span class="badge rounded-pill bg-light tag-badge">
                                        {{name}}
                                    </span>
                                </li>
                                {{/if}}
                                {{/each}}
                            </ul>
                        </span>
                        <span class="badge bg-warning ms-auto me-1 premium-badge">
                            Premium
                            <i class="bi bi-star-fill"></i>
                        </span>
                    </div>

                    <h3 class="card-title article-title">
                        {{this.draft.title}}
                    </h3>
                </div>

                <div class="list-group-item d-flex align-items-center justify-content-between">
                    <p class="writer-info">
                        <i class="bi bi-vector-pen"></i>
                        {{this.draft.writer_pseudonym}}
                    </p>

                    <small>
                        Đăng duyệt:
                        {{formatSimpleDatetime this.draft.last_modified}}
                    </small>
                </div>

                <div class="list-group-item text-center fw-bold">
                    {{this.draft.abstract}}
                </div>

                <div class="list-group-item">
                    <div class="d-flex justify-content-center">
                        <img src="{{this.draft.main_thumb}}" class="d-block w-100 h-100" alt="Photo">
                    </div>
                </div>

                <div class="list-group-item">
                    {{{this.draft.content}}}
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Reject Modal -->
<div class="modal fade" id="rejectModal" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">Không duyệt bài</h5>
                <button type="button" class="btn-close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form action="/editor/reject?id={{this.draft.id}}" method="post">
                <div class="modal-body">
                    <div class="form-group">
                        <label for="txtReason">
                            <b class="text-danger">Lý do</b>
                        </label>
                        <textarea class="form-control" name="reject_reason" id="txtReason" required></textarea>
                        <small id="helpId" class="text-muted p-2">Nhằm hiệu chỉnh lại bài viết cho phù hợp.</small>
                    </div>
                </div>
                <div class="modal-footer modal-footer-custom">
                    <button type="submit" class="btn btn-danger modal-button">Xác nhận</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Accept Modal -->
<div class="modal fade" id="acceptModal" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">Hiệu chỉnh</h5>
                <button type="button" class="btn-close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form action="/editor/approve?id={{this.draft.id}}" method="post">
                <div class="modal-body">
                    <div class="form-group">
                        <label class="ms-2" for="selectCat"><b class="text-danger">Danh mục</b></label>
                        <select class="" name="newCategories[]" id="selectCat"
                            placeholder="Chọn danh sách danh mục phù hợp..." autocomplete="off" multiple required>
                            {{#each this.cData}}
                            <optgroup class="p-5 select-group-header" label="{{name}}">
                                {{#each children}}
                                <option value="{{id}}" {{#if selected}}selected{{/if}} class="select-option">{{name}}
                                </option>
                                {{/each}}
                            </optgroup>
                            {{/each}}
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="ms-2" for="selectTag"><b class="text-danger">Nhãn</b></label>
                        <select class="" name="newTags[]" id="selectTag" placeholder="Chọn danh sách nhãn phù hợp..."
                            autocomplete="off" multiple required>
                            {{#each this.tData}}
                            <option value="{{id}}" {{#if selected}}selected{{/if}}>{{name}}</option>
                            {{/each}}
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="ms-2" for="pubdate"><b class="text-danger">Thời gian xuất bản</b></label>
                        <input type="datetime-local" name="publish_time" id="pubdate" class="form-control" required>
                    </div>
                </div>
                <div class="modal-footer modal-footer-custom">
                    <button type="submit" class="btn btn-danger modal-button">Xác nhận</button>
                </div>
            </form>
        </div>
    </div>
</div>