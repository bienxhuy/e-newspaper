{{#section 'css'}}
<style nonce="{{nonce}}">
    .article-title {
        color: black;
        font-size: large;
    }

    .article-title:hover {
        color: black;
        text-decoration: none;
    }

    .article-text {
        font-size: medium;
        color: #7E8299;
    }

    .category-name {
        font-weight: 500;
        font-size: large;
    }

    .article-row {
        border-radius: 10px;
    }

    .article-thumb {
        object-fit: cover;
        width: 200px;
        height: 170px;
    }
</style>
{{/section}}

<div>
    <span class="category-name">{{toUpperCase this.activeParentName}}</span>
    <i class="bi bi-caret-right-fill"></i>
    <span>{{this.activeCatName}}</span>
</div>
<hr>
{{#if this.isEmpty}}
Không có tin mới thuộc danh mục này.
{{/if}}
{{#each this.drafts}}
<div class="row mb-3 px-3 article-row">
    <div class="col-3">
        <a href="/editor/drafts/view?id={{id}}">
            <img src="{{main_thumb}}" class="rounded article-thumb" />
        </a>
    </div>
    <div class="col-9 pl-0 d-flex flex-column py-2">
        <a class="font-weight-bold article-title" href="/editor/drafts/view?id={{id}}">{{title}}</a>
        <div class="article-text mt-1">{{abstract}}</div>
        <p class="mb-0 article-text mt-auto d-flex">
            <span>
                Gửi lúc {{formatSimpleDatetime this.submit_time}}
            </span>
            {{#if is_premium}}
            <span class="badge badge-warning ml-auto mr-1">
                Premium
                <i class="bi bi-star-fill"></i>
            </span>
            {{/if}}
        </p>
    </div>
</div>
{{/each}}