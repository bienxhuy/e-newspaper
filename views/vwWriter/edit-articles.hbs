{{#section 'css'}}
<style>
    .main-container {
        width: 1280px;
        margin: auto;
    }

    .article-container {
        width: 730px;
        margin-left: 109px;
    }
</style>
{{/section}}

<div class="main-container d-flex mt-5 mb-5">
    <div class="article-container">
        <p class="ml-4 mb-2" style="color: #6B6869; font-size: 18px">Chỉnh sửa bài viết</p>
        <hr class="mt-0" color="grey">
        <form action="" method="post">
            <div class="form-group">
                <input type="text" name="" id="" class="form-control" placeholder="Tiêu đề bài viết" aria-describedby="helpId" value="{{this.draft.title}}" required>
            </div>
            <div class="form-group">
              <textarea class="form-control" id="exampleFormControlTextarea1" placeholder="Tóm tắt bài viết" rows="3" aria-describedby="helpId">{{this.draft.abstract}}</textarea>
              <small id="helpId" class="text-muted ml-1">Nội dung tóm tắt đày đủ ý chính sẽ thu hút người đọc hơn.</small>
            </div>
        </form>
    </div>
</div>